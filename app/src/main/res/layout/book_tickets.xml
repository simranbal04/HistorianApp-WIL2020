<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#effcef">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:text="Book your tickets here!"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/musuemname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="-22dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Number of Tickets"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold">
    </TextView>
    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/spin"
        android:entries="@array/noOfTickets"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-25dp">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Select date"
        android:padding="30dp"
        android:id="@+id/date"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/selectdate"
        android:layout_width="146dp"
        android:layout_height="47dp"
        android:text="Click to select Date"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-50dp"
        android:textStyle="bold"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Select Time"
        android:padding="30dp"
        android:id="@+id/time"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/selecttime"
        android:layout_width="146dp"
        android:layout_height="47dp"
        android:text="Click to select Time"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-50dp"
        android:textStyle="bold"
        android:textSize="14dp"/>



    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Tickets"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"/>




</LinearLayout>